---
// Corners.astro - Versi√≥n corregida
const { size = 6, bordersFull = false, color = "gray-600"} = Astro.props;

---

<div style="display: contents;">
  <div class="relative">
    <slot />
    <span 
      class={`absolute top-0 left-0 border-t-[1px] border-l-[1px] pointer-events-none border-gray-600`}
      style={`width: ${size}px; height: ${size}px; border-color: ${color};`}
    ></span>
    <span 
      class={`absolute top-0 right-0 border-t-[1px] border-r-[1px] pointer-events-none border-gray-600`}
      style={`width: ${size}px; height: ${size}px; border-color: ${color};`}
    ></span>
    <span 
      class={`absolute bottom-0 right-0 border-b-[1px] border-r-[1px] pointer-events-none border-gray-600`}
      style={`width: ${size}px; height: ${size}px; border-color: ${color};`}
    ></span>
    <span 
      class={`absolute bottom-0 left-0 border-b-[1px] border-l-[1px] pointer-events-none border-gray-600`}
      style={`width: ${size}px; height: ${size}px; border-color: ${color};`}
    ></span>
  </div>
</div>